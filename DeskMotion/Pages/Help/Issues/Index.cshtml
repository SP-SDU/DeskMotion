@page
@model DeskMotion.Pages.Help.Issues.IndexModel
@{
    ViewData["Title"] = "My Reports";
}

<div class="container mt-5">
    <h1>My Issue Reports</h1>
    <p class="lead">Below is a list of issue reports you have submitted.</p>

    <a asp-page="./Create" class="btn btn-primary"><span class="button-back">Report an Issue</span></a>

    @if (!Model.UserReports.Any())
    {
        <div class="alert alert-warning">You have not submitted any issue reports yet.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model.UserReports)
                {
                    <tr>
                        <td>@report.Title</td>
                        <td>@report.Status</td>
                        <td>@report.CreatedAt.ToString("g")</td>
                        <td>
                            <a asp-page="./Details" asp-route-id="@report.Id" class="btn btn-primary btn-sm"><span
                                    class="button-back">View</span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
