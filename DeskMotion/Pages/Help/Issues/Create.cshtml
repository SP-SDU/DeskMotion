@page
@model DeskMotion.Pages.Help.Issues.CreateModel
@{
    ViewData["Title"] = "Report an Issue";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <p class="text-muted">Submit an issue to our team for resolution.</p>

    <form method="post" enctype="multipart/form-data">
        <!-- Title -->
        <div class="form-group">
            <label for="Title" class="details-title">Title</label>
            <input type="text" class="details-input" id="Title" name="IssueReport.Title" required />
        </div>

        <!-- Description -->
        <div class="form-group mb-3">
            <label for="Description" class="details-title">Description</label>
            <textarea class="details-input" id="Description" name="IssueReport.Description" rows="5" required></textarea>
        </div>

        <!-- Attachments -->
        <div class="form-group mb-3">
            <label for="Attachments" class="details-title">Attachments (optional)</label>
            <input type="file" id="Attachments" name="attachments" multiple class="details-input" />
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-primary"><span class="button-back">Submit</span></button>
    </form>
</div>

<style>
    .form-group{
        display: flex; 
  flex-direction: column; /* Stack children vertically */
  align-items: stretch;
    }
    .details-title{
        align-self: flex-start;
        width: 50%;
    }
</style>
