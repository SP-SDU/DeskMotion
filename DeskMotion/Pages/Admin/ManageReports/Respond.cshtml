@page "{id:guid}"
@model DeskMotion.Pages.Admin.ManageReports.RespondModel
@{
    ViewData["Title"] = "Respond to Report";
}

<div class="container mt-5">
    <h1>Respond to Report</h1>
    <p class="lead">Provide a response to the user's report.</p>

    <form method="post">
        <div class="mb-3">
            <label for="response" class="form-label">Response</label>
            <textarea id="response" name="response" class="form-control" rows="5" required></textarea>
        </div>
        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select id="status" name="status" class="form-select">
                <option value="Open" selected="@(Model.Report.Status == "Open" ? "selected" : null)">Open</option>
                <option value="In Progress" selected="@(Model.Report.Status == "In Progress" ? "selected" : null)">In
                    Progress</option>
                <option value="Resolved" selected="@(Model.Report.Status == "Resolved" ? "selected" : null)">Resolved
                </option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Submit Response</button>
    </form>
</div>
