@page
@model DeskMotion.Pages.Admin.ManageReports.IndexModel
@{
    ViewData["Title"] = "Manage Reports";
    ViewData["ActivePage"] = ManageNavPages.ManageReports;
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.IssueReports)
        {
            <tr>
                <td>@report.Title</td>
                <td>@report.Description</td>
                <td>@report.Status</td>
                <td>@report.CreatedAt</td>
                <td>@report.UpdatedAt</td>
                <td>
                    <a asp-page-handler="Respond" asp-route-id="@report.Id" class="btn btn-primary">Respond</a>
                    <a asp-page-handler="Close" asp-route-id="@report.Id" class="btn btn-danger">Close</a>
                    <a asp-page-handler="UpdateStatus" asp-route-id="@report.Id" class="btn btn-secondary">Update Status</a>
                </td>
            </tr>
        }
    </tbody>
</table>
