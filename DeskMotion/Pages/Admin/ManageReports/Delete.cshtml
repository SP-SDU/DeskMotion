@page "{id:guid}"
@model DeskMotion.Pages.Admin.ManageReports.DeleteModel
@{
    ViewData["Title"] = "Delete Issue Report";
}

<div class="container mt-5">
    <h1>Delete Issue Report</h1>
    <p class="lead text-danger">Are you sure you want to delete this report?</p>

    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Report.Title</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Report.Description</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Report.Status</dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
