@page
@model DeskMotion.Pages.Admin.Metadata.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="details-container">
    <hr />
    <dl class="row">
        <dt class="details-title">
            @Html.DisplayNameFor(model => model.DeskMetadata.MacAddress)
        </dt>
        <dd class="details-input">
            @Html.DisplayFor(model => model.DeskMetadata.MacAddress)
        </dd>
        <dt class="details-title">
            @Html.DisplayNameFor(model => model.DeskMetadata.Location)
        </dt>
        <dd class="details-input">
            @Html.DisplayFor(model => model.DeskMetadata.Location)
        </dd>
        <dt class="details-title">
            @Html.DisplayNameFor(model => model.DeskMetadata.QRCodeData)
        </dt>
        <dd class="details-input">
            @Html.DisplayFor(model => model.DeskMetadata.QRCodeData)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="DeskMetadata.Id" />
        <button type="submit" class="btn btn-danger action-link"><span class="button-back">Delete</span></button>
        <a asp-page="Index" class="btn btn-primary action-link"><span class="button-back">Back to List</span></a>
    </form>
</div>

<style>
    .btn {
        width: 150px;
        margin-right: 20px;
    }

    .button-back {
        width: 150px;
        margin-right: 20px;
    }
</style>
