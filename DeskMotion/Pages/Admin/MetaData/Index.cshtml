@page
@model DeskMotion.Pages.Admin.Metadata.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = ManageNavPages.Metadata;
}

<h1>Metadata of all Desks</h1>

<p>
	<a asp-page="Create" class="btn action-link"><span class="button-back"> Create New </span></a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeskMetadata[0].MacAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskMetadata[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskMetadata[0].QRCodeData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DeskMetadata) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MacAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QRCodeData)
            </td>
            <td>
					<a asp-page="./Edit" asp-route-id="@item.Id" class="action-link">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id" class="action-link">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id" class="action-link">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
