@page
@model DeskMotion.Pages.Admin.Metadata.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeskMetadata</h4>
<hr />
<div class="row">
    <div class="details-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskMetadata.Id" />
            <div class="form-group">
                <label asp-for="DeskMetadata.MacAddress" class="details-title"></label>
                <input asp-for="DeskMetadata.MacAddress" class="details-input" />
                <span asp-validation-for="DeskMetadata.MacAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskMetadata.Location" class="details-title"></label>
                <input asp-for="DeskMetadata.Location" class="details-input" />
                <span asp-validation-for="DeskMetadata.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskMetadata.QRCodeData" class="details-title"></label>
                <input asp-for="DeskMetadata.QRCodeData" class="details-input" />
                <span asp-validation-for="DeskMetadata.QRCodeData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary action-link"><span class="button-back"> Save
                    </span></button>
                <a asp-page="Index" class="btn btn-primary action-link"><span class="button-back">Back to
                        List</span></a>
            </div>
        </form>
    </div>
</div>

<style>
    .btn {
        width: 150px;
        margin-right: 20px;
    }

    .button-back {
        width: 150px;
        margin-right: 20px;
    }
</style>
