@page
@model DeskMotion.Pages.Admin.Metadata.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DeskMetadata</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DeskMetadata.MacAddress" class="control-label"></label>
                <select asp-for="DeskMetadata.MacAddress" class="form-control" asp-items="Model.AvailableDesks">
                    <option value="">-- Select a Desk --</option>
                </select>
                <span asp-validation-for="DeskMetadata.MacAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeskMetadata.Location" class="control-label"></label>
                <input asp-for="DeskMetadata.Location" class="form-control" />
                <span asp-validation-for="DeskMetadata.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskMetadata.QRCodeData" class="control-label"></label>
                <input asp-for="DeskMetadata.QRCodeData" class="form-control" />
                <span asp-validation-for="DeskMetadata.QRCodeData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
