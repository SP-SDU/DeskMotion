@page
@model DeskMotion.Pages.Admin.Users.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<header>
    <h1>Delete User</h1>
    <h3>Are you sure you want to delete this user?</h3>
</header>

<div class="row">
    <div class="details-container">
        <dl class="row">
            <dt class="details-title">
                @Html.DisplayNameFor(model => model.IdentityUser!.UserName)
            </dt>
            <dd class="details-input">
                @Html.DisplayFor(model => model.IdentityUser!.UserName)
            </dd>
            <dt class="details-title">
                @Html.DisplayNameFor(model => model.IdentityUser!.Email)
            </dt>
            <dd class="details-input">
                @Html.DisplayFor(model => model.IdentityUser!.Email)
            </dd>
            <dt class="details-title">
                Role
            </dt>
            <dd class="details-input">
                @Model.UserRole
            </dd>
        </dl>
    </div>
</div>

<div class="form-group">
    <form method="post">
        <input type="hidden" asp-for="IdentityUser!.Id" />
        <button type="submit" class="btn btn-danger action-link"><span class="button-back"> Delete </span></button>
        <a asp-page="./Index" class="btn action-link"><span class="button-back"> Back to List </span></a>
    </form>
</div>
