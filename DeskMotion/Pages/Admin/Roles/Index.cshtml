@page
@model DeskMotion.Pages.Admin.Roles.IndexModel

@{
    ViewData["Title"] = "Roles";
    ViewData["ActivePage"] = ManageNavPages.Roles;
}

<h1>Roles</h1>
<h2>Overview</h2>

<p>
    <a asp-page="Create" class="btn action-link"><span class="button-back">Create New Role</span></a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles!)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@role.Id" class=" action-link">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@role.Id" class=" action-link">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
