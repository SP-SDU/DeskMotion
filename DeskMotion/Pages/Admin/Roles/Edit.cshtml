@page
@model DeskMotion.Pages.Admin.Roles.EditModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Role.Name" class="control-label">Name</label>
        <input asp-for="Role.Name" class="form-control" />
        <span asp-validation-for="Role.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary action-link" />
        <a asp-page="Index" class="btn btn-secondary action-link">Back to List</a>
    </div>
</form>
