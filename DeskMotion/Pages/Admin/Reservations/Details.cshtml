@page
@model DeskMotion.Pages.Admin.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Desk MAC Address
        </dt>
        <dd class="col-sm-10">
            @Model.DeskMacAddress
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.StartTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.EndTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reservation.Id" class="action-link">Edit</a> |
    <a asp-page="./Index" class="action-link">Back to List</a>
</div>
