@page
@model DeskMotion.Pages.Admin.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this reservation?</h3>

<div class="details-container">
    <h4>Reservation Details</h4>
    <hr />
    <dl class="row">
        <dt class="details-title">
            User
        </dt>
        <dd class="details-input">
            @Model.UserName
        </dd>
        <dt class="details-title">
            Desk MAC Address
        </dt>
        <dd class="details-input">
            @Model.DeskMacAddress
        </dd>
        <dt class="details-title">
            Start Time
        </dt>
        <dd class="details-input">
            @Model.Reservation.StartTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="details-title">
            End Time
        </dt>
        <dd class="details-input">
            @Model.Reservation.EndTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <button type="submit" class="btn btn-danger action-link"> <span class="button-back">Delete</span></button>
        <a asp-page="Index" class="btn btn-primary action-link"><span class="button-back">Back to List</span></a>
    </form>
</div>

<style>
    .btn {
        width: 150px;
        margin-right: 20px;
    }

    .button-back {
        width: 150px;
        margin-right: 20px;
    }
</style>
