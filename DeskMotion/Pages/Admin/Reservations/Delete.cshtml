@page
@model DeskMotion.Pages.Admin.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Desk MAC Address
        </dt>
        <dd class="col-sm-10">
            @Model.DeskMacAddress
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.StartTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.EndTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
