@page
@model DeskMotion.Pages.Admin.Reservations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>New Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Reservation.UserId" class="details-title"></label>
                <select asp-for="Reservation.UserId" class="details-input" asp-items="Model.Users"></select>
                <span asp-validation-for="Reservation.UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.DeskMetadataId" class="details-title"></label>
                <select asp-for="Reservation.DeskMetadataId" class="details-input" asp-items="Model.Desks"></select>
                <span asp-validation-for="Reservation.DeskMetadataId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartTimeLocal" class="details-title"></label>
                <input asp-for="StartTimeLocal" class="details-input" type="datetime-local" />
                <span asp-validation-for="StartTimeLocal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndTimeLocal" class="details-title"></label>
                <input asp-for="EndTimeLocal" class="details-input" type="datetime-local" />
                <span asp-validation-for="EndTimeLocal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary action-link"><span class="button-back">Create</span></button>
                <a asp-page="Index" class="btn btn-primary action-link"><span class="button-back">Back to List</span></a>
            </div>
        </form>
    </div>
</div>

<style>
    .btn{
    width: 150px;
    margin-right: 20px;

    }
    .button-back{
    width: 150px;
    margin-right: 20px;
    }
</style>

