@page
@model DeskMotion.Pages.Admin.Desks.IndexModel

@{
	ViewData["Title"] = "Index";
}

<body>
	<div class="container-fluid py-2">
		<div class="row p-2 row">
			<div class="head">
				<p>Index</p>
			</div>
			<div class="col-lg-12 col-md-12 col-sm-12 p-2">
				<table class="table table-success table-striped-columns">
					<thead>
						<tr>	
							<th>
								@Html.DisplayNameFor(model => model.Desk![0].Location)
							</th>
							@* 						<th>
							QR-Code
						</th> *@
							<th>
								@Html.DisplayNameFor(model => model.Desk![0].MacAddress)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Desk![0].Config.Name)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Desk![0].Config.Manufacturer)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Desk![0].State.Status)
							</th>
							<th>
								Action
							</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Desk != null && Model.Desk.Any())
						{
							@foreach (var item in Model.Desk!)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Location)
									</td>
									@* 								<td>
									@Html.DisplayFor(modelItem => item.QRCodeData)
								</td> *@
									<td>
										@Html.DisplayFor(modelItem => item.MacAddress)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Config.Name)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Config.Manufacturer)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.State.Status)
									</td>
									<td>
										<a asp-page="./DetailsDesk" asp-route-id="@item.Id" class="btn button">Details</a>
										<a asp-page="./DeleteDesk" asp-route-id="@item.Id" class="btn button">Delete</a>
									</td>
								</tr>
							}
						}
						else
						{
							<tr>
								<td colspan="3">No desks available.</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>
