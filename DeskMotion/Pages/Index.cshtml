@page
@model IndexModel

<h1>Your Desks</h1>

@if (Model.UserDesks.Count == 0)
{
    <p>You do not own any desks.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mac Address</th>
                <th>Location</th>
                <th>QR Code Data</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var desk in Model.UserDesks)
            {
                <tr>
                    <td>@desk.MacAddress</td>
                    <td>@desk.Location</td>
                    <td>@desk.QRCodeData</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@desk.Id" class="btn btn-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
