@page
@model DeskMotion.Pages.Reservations.CreateModel
@{
    ViewData["Title"] = "Reserve a Desk";
}

<h1>Reserve a Desk</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Reservation.DeskMetadataId" class="form-label">Select Desk</label>
                        <select asp-for="Reservation.DeskMetadataId" class="form-select" asp-items="Model.AvailableDesks"></select>
                        <span asp-validation-for="Reservation.DeskMetadataId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="StartTimeLocal" class="form-label">Start Time</label>
                        <input asp-for="StartTimeLocal" class="form-control" type="datetime-local" />
                        <span asp-validation-for="StartTimeLocal" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EndTimeLocal" class="form-label">End Time</label>
                        <input asp-for="EndTimeLocal" class="form-control" type="datetime-local" />
                        <span asp-validation-for="EndTimeLocal" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create Reservation</button>
                        <a asp-page="/Dashboard" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
