@page "{id:guid}"
@model DetailsModel
@{
    ViewData["Title"] = "Desk Details";
}

<h1>Desk Details</h1>

<div>
    <h4>Desk Metadata</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mac Address</dt>
        <dd class="col-sm-10">@Model.DeskMetadata.MacAddress</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.DeskMetadata.Location</dd>
        <dt class="col-sm-2">QR Code Data</dt>
        <dd class="col-sm-10">@Model.DeskMetadata.QRCodeData</dd>
    </dl>
</div>

<div>
    <h4>Desk State</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Attribute</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Current Position (mm)</td>
                <td>@Model.LatestDeskData.State.Position_mm</td>
            </tr>
            <tr>
                <td>Speed (mm/s)</td>
                <td>@Model.LatestDeskData.State.Speed_mms</td>
            </tr>
            <tr>
                <td>Status</td>
                <td>@Model.LatestDeskData.State.Status</td>
            </tr>
            <tr>
                <td>Activations Counter</td>
                <td>@Model.LatestDeskData.Usage.ActivationsCounter</td>
            </tr>
            <tr>
                <td>Sit/Stand Counter</td>
                <td>@Model.LatestDeskData.Usage.SitStandCounter</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mt-4">
    <h4>Desk Control</h4>
    <form method="post">
        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-primary" name="positionMm" value="1200">Move Up</button>
            <button class="btn btn-primary" name="positionMm" value="500">Move Down</button>
            <button class="btn btn-danger" name="positionMm" value="0">Stop</button>
        </div>
    </form>
</div>

@if (ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<a asp-page="./Index" class="btn btn-secondary mt-3">Back to List</a>
